<!-- item_view.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <builder.the.barry.bnbwc.MaskedCardView
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:strokeColor="@{isSelected ? @color/colorSelected : @color/colorUnselected}"
        android:background="#00000000"
        android:layout_margin="20dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Sunflower.Card">
<!--        app:cardBackgroundColor="@{isSelected ? @color/colorSelected : @color/colorUnselected}"-->
        <ImageView
            android:id="@+id/iv"
            android:scaleType="centerCrop"
            android:src="@{isSelected ? @drawable/ic_selected : @drawable/ic_unselected}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/header_title"
            android:text="@{title}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </builder.the.barry.bnbwc.MaskedCardView>
</layout>
